{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "target": "es2017",
    "module": "commonjs",
    "pretty": true,
    "noEmitOnError": true,
    "strict": true,
    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "rootDir": "./src"
  },
  "include": ["src"]
}
